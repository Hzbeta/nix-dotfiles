{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "home-manager switch",
            "type": "shell",
            // Add `path:` to make sure home-manager uses the file that is untracked by git
            // Only for debugging
            "command": "home-manager switch --flake \"path:${workspaceFolder}\"",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "statusbar": {
                    "label": "$(sync) HMS"
                }
            }
        }
    ]
}